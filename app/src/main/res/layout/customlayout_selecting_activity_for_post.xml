<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_for_log_comment">

    <TextView
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/tv_decrire_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"
        android:text="Veuillez décrire ce post"/>

    <LinearLayout
        android:id="@+id/ll1_activity_for_post"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/tv_decrire_post"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:weightSum="2">
        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            card_view:cardUseCompatPadding="true"
            card_view:cardElevation="5dp"
            card_view:cardBackgroundColor="#fefcfd"
            android:id="@+id/imagerepas"
            android:layout_weight="1"
            android:onClick="repasMethod">
        <ImageView
            android:id="@+id/yesrepas"
            android:layout_width="30dp"
            android:layout_height="35dp"
            android:src="@drawable/yes"
            android:layout_marginStart="5dp"
            android:visibility="invisible"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal|center_vertical"
            >
        <ImageView
            android:layout_width="61dp"
            android:layout_height="53dp"
            android:src="@drawable/camera_restaurant"
            android:layout_gravity="center_horizontal"
            />
        <TextView
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Repas"
            android:textColor="@color/violet4"
            android:textSize="15sp"/>
        </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            card_view:cardUseCompatPadding="true"
            card_view:cardElevation="5dp"
            card_view:cardBackgroundColor="#fefcfd"
            android:id="@+id/imagejeux"
            android:layout_weight="1"
            android:onClick="jeuxMethod">
            <ImageView
                android:id="@+id/yesjeux"
                android:layout_width="30dp"
                android:layout_height="35dp"
                android:src="@drawable/yes"
                android:layout_marginStart="5dp"
                android:visibility="invisible"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal|center_vertical"
                >
                <ImageView
                    android:layout_width="61dp"
                    android:layout_height="53dp"
                    android:src="@drawable/camera_pacman_game"
                    android:layout_gravity="center_horizontal"
                    />
                <TextView
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jeux"
                    android:textColor="@color/violet4"
                    android:textSize="15sp"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll2_activity_for_post"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-5dp"
        android:layout_below="@+id/ll1_activity_for_post"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:weightSum="2">
        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            card_view:cardUseCompatPadding="true"
            card_view:cardElevation="5dp"
            card_view:cardBackgroundColor="#fefcfd"
            android:id="@+id/imagesport"
            android:layout_weight="1"
            android:onClick="sportMethod">
            <ImageView
                android:id="@+id/yessport"
                android:layout_width="30dp"
                android:layout_height="35dp"
                android:src="@drawable/yes"
                android:layout_marginStart="5dp"
                android:visibility="invisible"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal|center_vertical"
                >
                <ImageView
                    android:layout_width="61dp"
                    android:layout_height="53dp"
                    android:src="@drawable/camera_running"
                    android:layout_gravity="center_horizontal"
                    />
                <TextView
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sport"
                    android:textColor="@color/violet4"
                    android:textSize="15sp"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            card_view:cardUseCompatPadding="true"
            card_view:cardElevation="5dp"
            card_view:cardBackgroundColor="#fefcfd"
            android:id="@+id/imagedessin"
            android:layout_weight="1"
            android:onClick="dessinMethod">
            <ImageView
                android:id="@+id/yesdessin"
                android:layout_width="30dp"
                android:layout_height="35dp"
                android:src="@drawable/yes"
                android:layout_marginStart="5dp"
                android:visibility="invisible"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal|center_vertical"
                >
                <ImageView
                    android:layout_width="61dp"
                    android:layout_height="53dp"
                    android:src="@drawable/camera_painting"
                    android:layout_gravity="center_horizontal"
                    />
                <TextView
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dessin"
                    android:textColor="@color/violet4"
                    android:textSize="15sp"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll3_activity_for_post"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-5dp"
        android:layout_below="@+id/ll2_activity_for_post"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:weightSum="2">
        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            card_view:cardUseCompatPadding="true"
            card_view:cardElevation="5dp"
            card_view:cardBackgroundColor="#fefcfd"
            android:id="@+id/imageapprentissage"
            android:onClick="apprentissageMethod"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/yesapprentissage"
                android:layout_width="30dp"
                android:layout_height="35dp"
                android:src="@drawable/yes"
                android:layout_marginStart="5dp"
                android:visibility="invisible"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal|center_vertical"
                >
                <ImageView
                    android:layout_width="61dp"
                    android:layout_height="53dp"
                    android:src="@drawable/camera_idea"
                    android:layout_gravity="center_horizontal"
                    />
                <TextView
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Apprentissage"
                    android:textColor="@color/violet4"
                    android:textSize="15sp"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            card_view:cardUseCompatPadding="true"
            card_view:cardElevation="5dp"
            card_view:cardBackgroundColor="#fefcfd"
            android:id="@+id/imagemignon"
            android:onClick="mignonMethod"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/yesmignon"
                android:layout_width="30dp"
                android:layout_height="35dp"
                android:src="@drawable/yes"
                android:layout_marginStart="5dp"
                android:visibility="invisible"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal|center_vertical"
                >
                <ImageView
                    android:layout_width="61dp"
                    android:layout_height="53dp"
                    android:src="@drawable/camera_hamster"
                    android:layout_gravity="center_horizontal"
                    />
                <TextView
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mignon"
                    android:textColor="@color/violet4"
                    android:textSize="15sp"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ll3_activity_for_post"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="-5dp"
        card_view:cardUseCompatPadding="true"
        card_view:cardElevation="5dp"
        card_view:cardBackgroundColor="#fefcfd">
        <EditText
            android:id="@+id/et_postLegend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/violet4"
            android:layout_below="@+id/ll3_activity_for_post"
            android:hint="Ajouter une légende..."
            android:background="@android:color/transparent"
            android:textSize="13sp"
            android:layout_alignStart="@+id/ll3_activity_for_post"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            />
        <Button
            android:id="@+id/btnPublierPost"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="PUBLIER"
            android:background="@color/violet4"
            android:textSize="12sp"
            android:textColor="@android:color/white"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="3dp"
            android:layout_marginRight="3dp"
            />
    </android.support.v7.widget.CardView>



</RelativeLayout>