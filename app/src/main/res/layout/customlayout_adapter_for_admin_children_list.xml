<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/child_profilpicture_in_newlog"
        android:layout_width="50dp"
        android:layout_height="51dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/childfullname_in_newlog"
        android:layout_marginTop="5dp"
        android:layout_marginStart="22dp"
        android:src="@mipmap/ic_launcher_round"
        app:civ_border_color="@android:color/transparent"/>

    <ImageView
        android:id="@+id/mask"
        android:layout_width="64dp"
        android:layout_height="65dp"
        android:paddingTop="2dp"
        android:layout_marginStart="15dp"
        android:layout_alignTop="@+id/childfullname_in_newlog"
        app:srcCompat="@drawable/mask"
        android:alpha="1"/>

    <TextView
        android:id="@+id/childfullname_in_newlog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="12dp"
        android:paddingTop="5dp"
        android:layout_marginTop="7dp"
        android:layout_toEndOf="@+id/child_profilpicture_in_newlog"
        android:text="Nom PrÃ©nom"
        android:singleLine="true"
        android:textColor="#000"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/childnickname_in_newlog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/childfullname_in_newlog"
        android:layout_below="@+id/childfullname_in_newlog"
        android:text="( nickname )"
        android:textSize="14sp"
        android:textColor="@color/black"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/mask"
        android:layout_marginTop="7dp"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="80dp"
        android:layout_centerHorizontal="true"
        android:background="@color/gris"
        />

    <ImageView
        android:id="@+id/declinebtn_in_children_list"
        android:layout_gravity="center_vertical"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="7dp"
        android:src="@drawable/decline_icon_admin"/>


</RelativeLayout>