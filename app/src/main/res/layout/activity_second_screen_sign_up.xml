<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundcut"
    tools:context="com.example.macbook.splash.Registration.SecondScreenSignUpActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="44dp"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="118dp"
                android:src="@drawable/logo"
                android:id="@+id/imageView"
                android:transitionName="imgTransition"
                />
        </LinearLayout>
        <TextView
            android:layout_marginTop="33dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/parentOuEnseignant"
            android:layout_width="220dp"
            android:layout_height="45dp"
            android:textSize="18sp"
            android:text="Alors, vous Ãªtes un Parent ou un Enseignant?"/>


        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="60dp"
        android:gravity="center_horizontal">

        <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="167dp"
        android:layout_height="167dp"
        card_view:cardUseCompatPadding="true"
        card_view:cardElevation="5dp"
        card_view:cardBackgroundColor="#fefcfd"
            android:onClick="ParentThirdScreenSignUp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal">
            <ImageView
                android:layout_width="61dp"
                android:layout_height="63dp"
                android:src="@drawable/house"
                android:layout_marginTop="15dp"
                android:layout_gravity="center_horizontal"
                />
            <TextView
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Parent"
                android:textColor="@color/violet4"
                android:layout_marginTop="19dp"
                android:textSize="25sp"/>
        </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="167dp"
            android:layout_height="167dp"
            card_view:cardUseCompatPadding="true"
            card_view:cardElevation="5dp"
            card_view:cardBackgroundColor="#fefcfd"
            android:onClick="EnseignantThirdScreenSignUp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal">
                <ImageView
                    android:layout_width="61dp"
                    android:layout_height="63dp"
                    android:src="@drawable/drawing"
                    android:layout_marginTop="15dp"
                    android:layout_gravity="center_horizontal"
                    />
                <TextView
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enseignant"
                    android:textColor="@color/violet4"
                    android:layout_marginTop="19dp"
                    android:textSize="25sp"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>
