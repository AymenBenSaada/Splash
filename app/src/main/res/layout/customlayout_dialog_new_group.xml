<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gris6e"
    android:theme="@style/Theme.AppCompat" >

    <EditText
        android:id="@+id/new_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:textColor="@color/black"
        android:hint="Ajouter le nom du groupe"
        android:textColorHint="@color/grisvert"/>

    <Button
        android:id="@+id/btn_add_new_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/new_group"
        android:text="Valider"
        android:textColor="@android:color/white"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#72b196"/>

</RelativeLayout>