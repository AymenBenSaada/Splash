<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/imgSuggestion"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:paddingTop="2dp"
        android:layout_marginStart="15dp"
        android:layout_alignTop="@+id/tv_suggestionTitle"
        app:srcCompat="@drawable/mask"
        android:alpha="1"/>

    <TextView
        android:id="@+id/tv_suggestionTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="12dp"
        android:layout_toEndOf="@+id/imgSuggestion"
        android:text="Title"
        android:singleLine="true"
        android:textColor="#000"
        android:textSize="25sp" />

    <LinearLayout
        android:id="@+id/LinearLayoutEtoiles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tv_suggestionTitle"
        android:layout_below="@+id/tv_suggestionTitle"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:weightSum="5"
        android:layout_toStartOf="@+id/tv_recompenses">
        <ImageView
            android:id="@+id/etoile1"
            android:layout_width="18dp"
            android:layout_height="19dp"
            android:src="@drawable/starcolored"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/etoile2"
            android:layout_width="18dp"
            android:layout_height="19dp"
            android:src="@drawable/starcolored"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/etoile3"
            android:layout_width="18dp"
            android:layout_height="19dp"
            android:src="@drawable/starcolored"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/etoile4"
            android:layout_width="18dp"
            android:layout_height="19dp"
            android:src="@drawable/starcolored"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/etoile5"
            android:layout_width="18dp"
            android:layout_height="19dp"
            android:src="@drawable/starcolored"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/suggestionEye"
            android:layout_width="20dp"
            android:layout_height="11dp"
            android:layout_marginTop="12dp"
            android:layout_marginStart="11dp"
            android:layout_marginEnd="14dp"
            android:src="@drawable/ischecked"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_recompenses"
        android:layout_width="124dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/tv_suggestionTitle"
        android:layout_marginEnd="10dp"
        android:text="RÃ©compense : 120000 xp"
        android:textColor="#000"
        android:textSize="11dp" />

    <TextView
        android:id="@+id/tv_suggestionRecuLe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tv_recompenses"
        android:layout_below="@+id/tv_recompenses"
        android:text="Recu le : "
        android:textColor="#000"
        android:textSize="11dp"
        card_view:layout_editor_absoluteX="362dp"
        card_view:layout_editor_absoluteY="70dp" />


        <View
            android:layout_width="250dp"
            android:layout_height="1dp"
            android:layout_below="@+id/tv_suggestionRecuLe"
            android:layout_marginTop="12dp"
            android:layout_centerHorizontal="true"
            android:background="@color/gris"
            />



</RelativeLayout>