<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/childProfilePictureListViewForTeacherSelectingChildren"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="22dp"
        android:layout_marginStart="22dp"
        android:src="@mipmap/ic_launcher_round"
        app:civ_border_color="@android:color/transparent"/>


    <ImageView
        android:id="@+id/selectedChildMark"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignTop="@+id/childProfilePictureListViewForTeacherSelectingChildren"
        android:layout_alignEnd="@+id/childProfilePictureListViewForTeacherSelectingChildren"
        android:background="@android:drawable/checkbox_on_background"
        android:gravity="center"
        android:visibility="invisible">
    </ImageView>


</RelativeLayout>
