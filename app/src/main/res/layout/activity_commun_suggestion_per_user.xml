<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.macbook.splash.CommunSuggestionPerUserActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/suggestion_cover_picture"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/suggestion_couver_picture"
                />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgSuggestion"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@mipmap/g"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="-50dp"
                />
            <TextView
                android:id="@+id/tv_suggestionTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="15dp"
                android:text="Title"
                android:textColor="#000"
                android:textSize="25sp" />

            <LinearLayout
                android:id="@+id/LinearLayoutEtoiles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:layout_marginStart="40dp"
                android:weightSum="5">
                <ImageView
                    android:id="@+id/etoile1"
                    android:layout_width="18dp"
                    android:layout_height="19dp"
                    android:src="@drawable/starcolored"
                    android:layout_weight="1"/>
                <ImageView
                    android:id="@+id/etoile2"
                    android:layout_width="18dp"
                    android:layout_height="19dp"
                    android:src="@drawable/starcolored"
                    android:layout_weight="1"/>
                <ImageView
                    android:id="@+id/etoile3"
                    android:layout_width="18dp"
                    android:layout_height="19dp"
                    android:src="@drawable/starcolored"
                    android:layout_weight="1"/>

                <ImageView
                    android:id="@+id/etoile4"
                    android:layout_width="18dp"
                    android:layout_height="19dp"
                    android:src="@drawable/starcolored"
                    android:layout_weight="1"/>

                <ImageView
                    android:id="@+id/etoile5"
                    android:layout_width="18dp"
                    android:layout_height="19dp"
                    android:src="@drawable/starcolored"
                    android:layout_weight="1"/>
            </LinearLayout>

            <TextView
                android:layout_marginTop="15dp"
                android:layout_marginStart="40dp"
                android:id="@+id/tv_recompenses"
                android:layout_width="124dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:text="RÃ©compense : 120000 xp"
                android:textColor="#000"
                android:textSize="11dp" />

            <TextView
                android:layout_marginStart="40dp"
                android:id="@+id/tv_suggestionRecuLe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recu le : "
                android:textColor="#000"
                android:textSize="11dp" />

            <TextView
                android:id="@+id/paragrapheid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="17dp"
                android:text="Paragraphe"
                android:layout_marginEnd="40dp"
                android:textColor="@color/black"
                android:textSize="13dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/LinearLayoutLiens"
                android:layout_marginTop="27dp"
                android:layout_marginStart="13dp"
                >

            </LinearLayout>

            <com.google.android.youtube.player.YouTubePlayerView
                android:id="@+id/videoYoutube"
                android:layout_marginTop="25dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_height="wrap_content">

            </com.google.android.youtube.player.YouTubePlayerView>

            <LinearLayout
                android:layout_marginTop="60dp"
                android:layout_marginBottom="60dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:weightSum="2" >
                <Button
                    android:id="@+id/btnSuggestionTermier"
                    android:layout_width="80dp"
                    android:layout_height="22dp"
                    android:text="TERMINER"
                    android:textColor="@android:color/white"
                    android:layout_weight="1"
                    android:background="@color/grisvert"
                    android:enabled="false"
                    android:textSize="10sp"/>
                <Button
                    android:id="@+id/btnSuggestionSuivre"
                    android:layout_width="80dp"
                    android:layout_height="22dp"
                    android:text="SUIVRE"
                    android:textColor="@android:color/white"
                    android:layout_weight="1"
                    android:background="@color/violet4"
                    android:layout_marginStart="10dp"
                    android:textSize="10sp"/>

            </LinearLayout>

        </LinearLayout>


    </ScrollView>



</RelativeLayout>
