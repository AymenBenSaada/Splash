<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundcut"
    tools:context="com.example.macbook.splash.Registration.SecondScreenSignUpActivity">

    <ImageView
        android:layout_width="272px"
        android:layout_height="353px"
        android:background="@drawable/logo"
        android:layout_marginTop="130px"
        android:layout_marginStart="216px"
        android:transitionName="imgTransition"
        android:id="@+id/imageView" />

    <TextView
        android:id="@+id/compteEnfantsInscrits"
        android:layout_width="667px"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/imageView"
        android:layout_below="@+id/imageView"
        android:layout_marginTop="98px"
        android:textSize="56px"
        android:text="Leurs avez-vous dèjà crée des comptes sur eDonec?"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/compteEnfantsInscrits"
        android:layout_marginTop="60dp"
        android:gravity="center_horizontal">

        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="500px"
            android:layout_height="500px"
            card_view:cardUseCompatPadding="true"
            card_view:cardElevation="4dp"
            card_view:cardBackgroundColor="#fefcfd"
            android:onClick="OuiSeventhScreenSignUp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal">
                <ImageView
                    android:layout_width="83px"
                    android:layout_height="90px"
                    android:src="@drawable/yes"
                    android:layout_marginTop="145px"
                    android:layout_gravity="center_horizontal"
                    />
                <TextView
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Oui"
                    android:textColor="@color/violet4"
                    android:layout_marginTop="57px"
                    android:textSize="74px"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="500px"
            android:layout_height="500px"
            card_view:cardUseCompatPadding="true"
            card_view:cardElevation="4dp"
            card_view:cardBackgroundColor="#fefcfd"
            android:onClick="NonSeventhScreenSignUpParent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal">
                <ImageView
                    android:layout_width="83px"
                    android:layout_height="90px"
                    android:src="@drawable/no"
                    android:layout_marginTop="145px"
                    android:layout_gravity="center_horizontal"
                    />
                <TextView
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Non"
                    android:textColor="@color/violet4"
                    android:layout_marginTop="57px"
                    android:textSize="74px"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>


    </LinearLayout>


</RelativeLayout>
