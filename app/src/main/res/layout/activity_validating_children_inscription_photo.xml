<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.macbook.splash.ValidatingChildrenInscriptionPhotoActivity"
    android:background="@drawable/backgroundcut">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/photochildreninscription"
        android:layout_marginTop="30dp"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/tvPhotoEnfant"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/photochildreninscription"
        android:layout_marginTop="15dp"
        android:textSize="18sp"
        android:text="Aimez-vous cette photo?"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/tvPhotoEnfant"
        android:gravity="center_horizontal">

        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="170dp"
            android:layout_height="170dp"
            card_view:cardUseCompatPadding="true"
            card_view:cardElevation="4dp"
            card_view:cardBackgroundColor="#fefcfd"
            android:onClick="ValidationChildPhoto">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal">
                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="30dp"
                    android:src="@drawable/yes"
                    android:layout_marginTop="50dp"
                    android:layout_gravity="center_horizontal"
                    />
                <TextView
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Oui"
                    android:textColor="@color/violet4"
                    android:layout_marginTop="20dp"
                    android:textSize="25sp"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="170dp"
            android:layout_height="170dp"
            card_view:cardUseCompatPadding="true"
            card_view:cardElevation="4dp"
            card_view:cardBackgroundColor="#fefcfd"
            android:onClick="ValidationChildPhoto">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal">
                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="30dp"
                    android:src="@drawable/no"
                    android:layout_marginTop="50dp"
                    android:layout_gravity="center_horizontal"
                    />
                <TextView
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Non"
                    android:textColor="@color/violet4"
                    android:layout_marginTop="20dp"
                    android:textSize="25sp"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>


</RelativeLayout>
