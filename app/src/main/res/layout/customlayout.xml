<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/photo"
        android:layout_width="50dp"
        android:layout_height="51dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/tv_name"
        android:layout_marginTop="5dp"
        android:layout_marginStart="22dp"
        android:src="@mipmap/ic_launcher_round"
        app:civ_border_color="@android:color/transparent"/>

    <ImageView
        android:id="@+id/mask"
        android:layout_width="64dp"
        android:layout_height="65dp"
        android:paddingTop="2dp"
        android:layout_marginStart="15dp"
        android:layout_alignTop="@+id/tv_name"
        app:srcCompat="@drawable/mask"
        android:alpha="1"/>


    <RelativeLayout
        android:id="@+id/notif"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignTop="@+id/photo"
        android:layout_marginEnd="-3dp"
        android:layout_marginTop="-3dp"
        android:layout_toStartOf="@+id/tv_name"
        android:background="@android:drawable/ic_notification_overlay"
        android:gravity="center">

        <TextView
            android:id="@+id/notifications"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="0"
            android:textColor="#fff"
            android:textSize="7sp" />

    </RelativeLayout>


    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_toEndOf="@+id/photo"
        android:text="QQQQQQQQQQQQQAiewqeqweqweq"
        android:singleLine="true"
        android:textColor="#000"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/tvAbreviation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tv_name"
        android:layout_below="@+id/tv_name"
        android:text="( Abreviation )"
        android:textColor="@color/black"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_observationsnbr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/tv_name"
        android:layout_marginEnd="10dp"
        android:text="Observations :  "
        android:textColor="#000"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/tv_modifie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tv_observationsnbr"
        android:layout_below="@+id/tv_observationsnbr"
        android:text="Modifie : "
        android:textColor="#000"
        android:textSize="11sp"
        card_view:layout_editor_absoluteX="362dp"
        card_view:layout_editor_absoluteY="70dp" />


    <View
        android:layout_width="250dp"
        android:layout_height="1dp"
        android:layout_below="@+id/tv_modifie"
        android:layout_marginTop="12dp"
        android:layout_centerHorizontal="true"
        android:background="@color/gris"
        />


</RelativeLayout>