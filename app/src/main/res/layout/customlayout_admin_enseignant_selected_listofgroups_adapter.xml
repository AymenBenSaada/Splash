<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/transparent">



    <android.support.v7.widget.CardView
        android:id="@+id/cardview_in_grps_list"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        card_view:cardUseCompatPadding="true"
        card_view:cardElevation="5dp"
        card_view:cardBackgroundColor="#fefcfd"
        android:layout_centerHorizontal="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:id="@+id/grp_name_in_grp_list_in_teacher_profile"
            android:layout_width="match_parent"
            android:layout_toStartOf="@+id/linearlayout_n_enfants_n_ense"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Nom du groupe"
            android:textSize="23sp"
            android:singleLine="true"

            />

        <LinearLayout
            android:id="@+id/linearlayout_n_enfants_n_ense"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="7dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/grp_children_nbr_in_grp_list_in_teacher_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="n enfants"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:singleLine="true"
                />

            <TextView
                android:id="@+id/grp_teachers_nbr_in_grp_list_in_teacher_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="n enseignants"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:singleLine="true"  />
        </LinearLayout>


            <ImageView
            android:id="@+id/declinebtn_in_grps_list"
            android:layout_gravity="center_vertical"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:src="@drawable/decline_icon_admin"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>



</RelativeLayout>