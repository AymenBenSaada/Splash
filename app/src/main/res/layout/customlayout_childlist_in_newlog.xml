<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/child_profilpicture_in_newlog"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_marginStart="15dp"
        android:src="@mipmap/ic_launcher"
        />

    <TextView
        android:id="@+id/childfullname_in_newlog"
        android:layout_width="wrap_content"
        android:layout_height="27dp"
        android:text="Gharbi Aymen"
        android:singleLine="true"
        android:layout_marginStart="15dp"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_toEndOf="@+id/child_profilpicture_in_newlog"
        android:layout_alignTop="@+id/child_profilpicture_in_newlog"/>

    <TextView
        android:id="@+id/childnickname_in_newlog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/childfullname_in_newlog"
        android:layout_alignStart="@+id/childfullname_in_newlog"
        android:layout_alignEnd="@+id/childfullname_in_newlog"
        android:singleLine="true"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:text="( El gen )"/>
</RelativeLayout>